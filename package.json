{
  "name": "modern-node-template",
  "version": "1.4.0",
  "description": "A modern Node.js TypeScript project template with enterprise-grade tooling",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "nodemon",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "docker:build": "docker build -t modern-node-template -f docker/Dockerfile .",
    "docker:run": "docker run modern-node-template",
    "docker:run:prod": "docker run -e NODE_ENV=production modern-node-template",
    "docker:dev": "docker run -v $(pwd)/src:/app/src modern-node-template npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/superlayzer/modern-node-template.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "template",
    "eslint",
    "prettier",
    "husky",
    "dotenv",
    "zod",
    "winston",
    "modern",
    "enterprise",
    "docker",
    "ci-cd",
    "github-actions",
    "semantic-release",
    "conventional-commits",
    "testing",
    "vitest",
    "nodemon",
    "tsx"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=11.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "winston": "^3.17.0",
    "zod": "^4.0.17"
  }
}
